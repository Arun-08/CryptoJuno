<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="130dp"
        android:layout_height="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:padding="10dp"
                android:background="@drawable/rect_bg_grey">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivLogo"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@android:drawable/ic_menu_compass"
                            android:scaleType="centerCrop"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="35dp"
                            app:srcCompat="@drawable/graph"
                            android:scaleType="centerCrop"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvCoinName"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="@string/Buy"
                        android:textStyle="normal"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:theme="@style/customTextView"/>
                    <TextView
                        android:id="@+id/tvCoin"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="3dp"
                        android:text="@string/Buy"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:theme="@style/customTextViewBold"/>

                </androidx.appcompat.widget.LinearLayoutCompat>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:background="@color/white">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/rect_bg_blue"
                    app:srcCompat="@android:drawable/stat_sys_download"
                    app:tint="@color/purple_700"
                    android:padding="7dp"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:text="@string/Buy"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/rect_bg_blue"
                    android:theme="@style/customTextViewBoldButton"/>
            </LinearLayout>
        </FrameLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>